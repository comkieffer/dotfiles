
GREEN_TICK='\e[1;92m✓\e[0m'
RED_CROSS='\e[1;31m✘\e[0m'

if [[ ${ROS_DISTRO} ]]; then 
    DISTRO=${ROS_DISTRO}
else
    # IF the $ROS_DISTRO variable isn't set then manually check for recent ROS distros
    if [[ -d /opt/ros/kinetic ]]; then
        DISTRO='kinetic'
    elif [[ -d /opt/ros/lunar ]]; then
        DISTRO='lunar'
    fi
fi

if [[ -f /opt/ros/${DISTRO}/setup.zsh ]]; then
    source /opt/ros/${DISTRO}/setup.zsh
    echo "  ${GREEN_TICK} sourced \e[1mros-${DISTRO}\e[0m setup"
fi

# Warn if there is no devel setup
if [[ -f devel/setup.zsh ]]; then 
    source devel/setup.zsh
    echo "  ${GREEN_TICK} sourced \e[1mdevel-space\e[0m setup"
else
    echo "  ${RED_CROSS} \e[1mERROR\e[0m: Unable to locate setup file \e[1mdevel/setup.zsh\e[0m"
fi

# Not having an install setup file is relatively common so don't warn this time
if [[ -f install/setup.zsh ]]; then 
    source devel/setup.zsh
    echo "  ${GREEN_TICK} sourced \e[1minstall-space\e[0m setup"
fi
