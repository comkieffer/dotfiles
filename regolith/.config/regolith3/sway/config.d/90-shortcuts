# Unbind regolith default application launchers (we use launcher mode instead)
unbindsym $mod+Return
unbindsym $mod+Shift+Return

# Unbind regolith default settings shortcuts (we use settings mode instead)
unbindsym $mod+c
unbindsym $mod+d
unbindsym $mod+w
unbindsym $mod+b

# On keyboards that have a ptint screen key
bindsym Print exec "/usr/bin/flameshot full"
bindsym Shift+Print exec "/usr/bin/flameshot gui"

bindsym $mod+Insert exec "/usr/bin/flameshot full"
bindsym $mod+Shift+Insert exec "/usr/bin/flameshot gui"

# Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $tibo_mode_launcher Thibaud Commands: [a] Action Menu [d] Distribute Windows [g] Goto Repo [h] Make Hero Window
bindsym $mod+m mode "$tibo_mode_launcher"

mode "$tibo_mode_launcher" {
    bindsym a exec ck-action-menu; mode "default"
    bindsym w exec assign-workspaces; mode "default"
    bindsym g exec gl-tool goto; mode "default"
    bindsym h exec make-hero-window; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+o mode launch_application
mode launch_application {
    bindsym b exec --no-startup-id systemd-run --user --scope $wm.program.browser; mode "default";  # Open Web Browser
    bindsym c exec --no-startupid $HOME/.local/share/Jetbrains/Toolbox/apps/clion/bin/clion; mode "default";  # Open CLion
    bindsym f exec --no-startup-id $wm.program.files; mode "default";                               # Open File Manager
    bindsym o exec --no-startup-id obsidian-focus; mode "default";                                  # Open or focus Obsidian
    bindsym p exec --no-startupid $HOME/.local/share/Jetbrains/Toolbox/apps/pycharm/bin/pycharm; mode "default";  # Open Pycharm
    bindsym s exec --no-startup-id smerge; mode "default";                                          # Open Sublime Merge
    bindsym t exec --no-startup-id $wm.program.terminal; mode "default";                            # Open Terminal

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+s mode launch_settings
mode launch_settings {
    bindsym o exec --no-startup-id $wm.program.settings; mode "default";                            # Settings
    bindsym b exec --no-startup-id $wm.program.bluetooth; mode "default";                           # Bluetooth Settings
    bindsym d exec --no-startup-id $wm.program.display; mode "default";                             # Display Settings
    bindsym s exec --no-startup-id $wm.program.settings sound; mode "default";                      # Display Settings
    bindsym w exec --no-startup-id $wm.program.wifi; mode "default";                                # Wi-Fi Settings

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
