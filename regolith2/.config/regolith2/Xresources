! Fix fontsize for Gnome-Terminal
! gnome.terminal.font: Source Code Pro 10

! Tell regolith to not override the desktop set by gnome
! gnome.wallpaper:

! i3xblocks Configuration
! Set date format to european-style 24 hour time (DD/MM HH:MM)
! i3xrocks.date.format2: %d/%m %H:%M

! Regolith-look configuration
! This field is auto-updated when running `regolith-look set ...`
regolith.look.path: /usr/share/regolith-look/ayu-mirage
